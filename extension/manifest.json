{
  "manifest_version": 3,
  "name": "ChatGPT Input Monitor",
  "version": "1.0",
  "description": "Watches ChatGPT input and sends it to an API",
  "permissions": ["scripting"],
  "host_permissions": ["https://chat.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
